--[[
    Fryzer UI Library - Responsive & Compact Version
    A modern UI library for Roblox that works on all devices
    Author: Fryzer
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local FryzerUI = {}
FryzerUI.__index = FryzerUI

-- Device Detection
local function GetDeviceType()
    if UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled then
        return "Mobile"
    elseif UserInputService.GamepadEnabled then
        return "Console"
    else
        return "PC"
    end
end

-- Responsive Sizing
local function GetResponsiveSize()
    local deviceType = GetDeviceType()
    local viewportSize = workspace.CurrentCamera.ViewportSize
    
    if deviceType == "Mobile" then
        -- Smaller for mobile devices
        return UDim2.new(0, math.min(viewportSize.X * 0.9, 400), 0, math.min(viewportSize.Y * 0.7, 350))
    elseif deviceType == "Console" then
        return UDim2.new(0, 500, 0, 380)
    else
        -- PC - Compact but functional
        return UDim2.new(0, 550, 0, 380)
    end
end

-- Utility Functions
local function Tween(instance, properties, duration, style, direction)
    local tweenInfo = TweenInfo.new(
        duration or 0.3,
        style or Enum.EasingStyle.Quad,
        direction or Enum.EasingDirection.Out
    )
    local tween = TweenService:Create(instance, tweenInfo, properties)
    tween:Play()
    return tween
end

local function MakeDraggable(frame, dragFrame)
    local dragging, dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale, 
            startPos.X.Offset + delta.X, 
            startPos.Y.Scale, 
            startPos.Y.Offset + delta.Y
        )
    end
    
    dragFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    dragFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
end

-- Main Library Function
function FryzerUI:CreateWindow(config)
    local Window = {}
    Window.Tabs = {}
    Window.CurrentTab = nil
    
    config = config or {}
    config.Title = config.Title or "Fryzer Hub"
    config.Version = config.Version or "v1.0"
    
    local playerGui = LocalPlayer:WaitForChild("PlayerGui")
    
    -- Create ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "FryzerGui"
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.DisplayOrder = 999
    
    pcall(function()
        ScreenGui.Parent = game:GetService("CoreGui")
    end)
    
    if not ScreenGui.Parent then
        ScreenGui.Parent = playerGui
    end
    
    -- Get responsive size
    local responsiveSize = GetResponsiveSize()
    
    -- Main Background
    local MainBg = Instance.new("Frame")
    MainBg.Name = "MainBg"
    MainBg.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    MainBg.AnchorPoint = Vector2.new(0.5, 0.5)
    MainBg.Position = UDim2.new(0.5, 0, 0.5, 0)
    MainBg.Size = responsiveSize
    MainBg.ClipsDescendants = true
    MainBg.BorderSizePixel = 0
    MainBg.Active = true
    MainBg.Parent = ScreenGui
    
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 12)
    MainCorner.Parent = MainBg
    
    -- Top Bar (Compact)
    local TopBar = Instance.new("Frame")
    TopBar.Name = "TopBar"
    TopBar.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TopBar.Size = UDim2.new(1, 0, 0, 45)
    TopBar.BorderSizePixel = 0
    TopBar.Parent = MainBg
    
    local TopBarCorner = Instance.new("UICorner")
    TopBarCorner.CornerRadius = UDim.new(0, 12)
    TopBarCorner.Parent = TopBar
    
    local TopBarExtend = Instance.new("Frame")
    TopBarExtend.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TopBarExtend.Position = UDim2.new(0, 0, 0.7, 0)
    TopBarExtend.Size = UDim2.new(1, 0, 0.3, 0)
    TopBarExtend.BorderSizePixel = 0
    TopBarExtend.Parent = TopBar
    
    -- Title (Compact)
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.BackgroundTransparency = 1
    Title.Position = UDim2.new(0.02, 0, 0, 0)
    Title.Size = UDim2.new(0.4, 0, 1, 0)
    Title.Font = Enum.Font.GothamBold
    Title.Text = config.Title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 14
    Title.TextScaled = true
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = TopBar
    
    -- Version Tag (Compact)
    local VersionTag = Instance.new("Frame")
    VersionTag.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    VersionTag.Position = UDim2.new(0.45, 0, 0.2, 0)
    VersionTag.Size = UDim2.new(0, 65, 0, 26)
    VersionTag.BorderSizePixel = 0
    VersionTag.Parent = TopBar
    
    local VersionCorner = Instance.new("UICorner")
    VersionCorner.CornerRadius = UDim.new(0, 13)
    VersionCorner.Parent = VersionTag
    
    local VersionText = Instance.new("TextLabel")
    VersionText.BackgroundTransparency = 1
    VersionText.Size = UDim2.new(1, 0, 1, 0)
    VersionText.Font = Enum.Font.GothamBold
    VersionText.Text = config.Version
    VersionText.TextColor3 = Color3.fromRGB(255, 255, 255)
    VersionText.TextSize = 12
    VersionText.Parent = VersionTag
    
    -- Close Button
    local CloseButton = Instance.new("TextButton")
    CloseButton.BackgroundTransparency = 1
    CloseButton.Position = UDim2.new(0.92, 0, 0, 0)
    CloseButton.Size = UDim2.new(0.08, 0, 1, 0)
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.Text = "X"
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 16
    CloseButton.BorderSizePixel = 0
    CloseButton.Parent = TopBar
    
    CloseButton.MouseButton1Click:Connect(function()
        Tween(MainBg, {Size = UDim2.new(0, 0, 0, 0)}, 0.3)
        task.wait(0.3)
        ScreenGui:Destroy()
    end)
    
    -- Minimize Button
    local MinimizeButton = Instance.new("TextButton")
    MinimizeButton.BackgroundTransparency = 1
    MinimizeButton.Position = UDim2.new(0.84, 0, 0, 0)
    MinimizeButton.Size = UDim2.new(0.08, 0, 1, 0)
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.Text = "-"
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.TextSize = 20
    MinimizeButton.BorderSizePixel = 0
    MinimizeButton.Parent = TopBar
    
    local isMinimized = false
    MinimizeButton.MouseButton1Click:Connect(function()
        isMinimized = not isMinimized
        if isMinimized then
            Tween(MainBg, {Size = UDim2.new(responsiveSize.X.Scale, responsiveSize.X.Offset, 0, 45)}, 0.3)
            MinimizeButton.Text = "+"
        else
            Tween(MainBg, {Size = responsiveSize}, 0.3)
            MinimizeButton.Text = "-"
        end
    end)
    
    -- Top Divider
    local TopDivider = Instance.new("Frame")
    TopDivider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    TopDivider.Position = UDim2.new(0, 0, 0, 45)
    TopDivider.Size = UDim2.new(1, 0, 0, 1)
    TopDivider.BorderSizePixel = 0
    TopDivider.Parent = MainBg
    
    -- Tab Section (Compact)
    local TabSection = Instance.new("Frame")
    TabSection.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TabSection.Position = UDim2.new(0, 0, 0, 46)
    TabSection.Size = UDim2.new(0, 100, 1, -91)
    TabSection.BorderSizePixel = 0
    TabSection.Parent = MainBg
    
    local TabList = Instance.new("UIListLayout")
    TabList.Padding = UDim.new(0, 3)
    TabList.SortOrder = Enum.SortOrder.LayoutOrder
    TabList.Parent = TabSection
    
    local TabPadding = Instance.new("UIPadding")
    TabPadding.PaddingTop = UDim.new(0, 5)
    TabPadding.PaddingLeft = UDim.new(0, 5)
    TabPadding.PaddingRight = UDim.new(0, 5)
    TabPadding.Parent = TabSection
    
    -- Tab Divider
    local TabDivider = Instance.new("Frame")
    TabDivider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    TabDivider.Position = UDim2.new(0, 100, 0, 46)
    TabDivider.Size = UDim2.new(0, 1, 1, -91)
    TabDivider.BorderSizePixel = 0
    TabDivider.Parent = MainBg
    
    -- Main Content Area
    local ContentArea = Instance.new("Frame")
    ContentArea.Name = "ContentArea"
    ContentArea.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ContentArea.Position = UDim2.new(0, 106, 0, 50)
    ContentArea.Size = UDim2.new(1, -112, 1, -95)
    ContentArea.ClipsDescendants = true
    ContentArea.BorderSizePixel = 0
    ContentArea.Parent = MainBg
    
    local ContentCorner = Instance.new("UICorner")
    ContentCorner.CornerRadius = UDim.new(0, 8)
    ContentCorner.Parent = ContentArea
    
    -- Bottom Bar (Compact)
    local BottomBar = Instance.new("Frame")
    BottomBar.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    BottomBar.Position = UDim2.new(0, 0, 1, -40)
    BottomBar.Size = UDim2.new(1, 0, 0, 40)
    BottomBar.BorderSizePixel = 0
    BottomBar.Parent = MainBg
    
    local BottomCorner = Instance.new("UICorner")
    BottomCorner.CornerRadius = UDim.new(0, 12)
    BottomCorner.Parent = BottomBar
    
    local BottomExtend = Instance.new("Frame")
    BottomExtend.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    BottomExtend.Position = UDim2.new(0, 0, 0, 0)
    BottomExtend.Size = UDim2.new(1, 0, 0.3, 0)
    BottomExtend.BorderSizePixel = 0
    BottomExtend.Parent = BottomBar
    
    -- Bottom Divider
    local BottomDivider = Instance.new("Frame")
    BottomDivider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    BottomDivider.Position = UDim2.new(0, 0, 1, -41)
    BottomDivider.Size = UDim2.new(1, 0, 0, 1)
    BottomDivider.BorderSizePixel = 0
    BottomDivider.Parent = MainBg
    
    -- User Profile (Compact)
    local UserProfile = Instance.new("ImageLabel")
    UserProfile.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    UserProfile.Position = UDim2.new(0.02, 0, 0.15, 0)
    UserProfile.Size = UDim2.new(0, 28, 0, 28)
    UserProfile.BorderSizePixel = 0
    UserProfile.Image = "https://www.roblox.com/headshot-thumbnail/image?userId=" .. LocalPlayer.UserId .. "&width=150&height=150&format=png"
    UserProfile.Parent = BottomBar
    
    local ProfileCorner = Instance.new("UICorner")
    ProfileCorner.CornerRadius = UDim.new(1, 0)
    ProfileCorner.Parent = UserProfile
    
    -- Username (Compact)
    local Username = Instance.new("TextLabel")
    Username.BackgroundTransparency = 1
    Username.Position = UDim2.new(0, 38, 0, 0)
    Username.Size = UDim2.new(0, 100, 1, 0)
    Username.Font = Enum.Font.GothamBold
    Username.Text = "@" .. LocalPlayer.Name
    Username.TextColor3 = Color3.fromRGB(255, 255, 255)
    Username.TextSize = 10
    Username.TextScaled = true
    Username.TextXAlignment = Enum.TextXAlignment.Left
    Username.Parent = BottomBar
    
    -- FPS Counter (Compact)
    local FpsLabel = Instance.new("TextLabel")
    FpsLabel.BackgroundTransparency = 1
    FpsLabel.Position = UDim2.new(0.65, 0, 0, 0)
    FpsLabel.Size = UDim2.new(0.15, 0, 1, 0)
    FpsLabel.Font = Enum.Font.GothamBold
    FpsLabel.Text = "FPS: 60"
    FpsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    FpsLabel.TextSize = 11
    FpsLabel.TextScaled = true
    FpsLabel.Parent = BottomBar
    
    -- Time Label (Compact)
    local TimeLabel = Instance.new("TextLabel")
    TimeLabel.BackgroundTransparency = 1
    TimeLabel.Position = UDim2.new(0.82, 0, 0, 0)
    TimeLabel.Size = UDim2.new(0.16, 0, 1, 0)
    TimeLabel.Font = Enum.Font.GothamBold
    TimeLabel.Text = "00:00"
    TimeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TimeLabel.TextSize = 11
    TimeLabel.TextScaled = true
    TimeLabel.Parent = BottomBar
    
    -- Update FPS and Time
    local lastUpdate = tick()
    local fps = 60
    
    RunService.RenderStepped:Connect(function()
        local now = tick()
        fps = math.floor(1 / (now - lastUpdate))
        lastUpdate = now
        
        FpsLabel.Text = "FPS: " .. fps
        TimeLabel.Text = os.date("%H:%M")
    end)
    
    -- Make Draggable
    MakeDraggable(MainBg, TopBar)
    
    -- Window Functions
    function Window:AddTab(name)
        local Tab = {}
        Tab.Name = name
        Tab.Elements = {}
        
        -- Tab Button (Compact)
        local TabButton = Instance.new("TextButton")
        TabButton.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
        TabButton.Size = UDim2.new(1, -10, 0, 32)
        TabButton.Font = Enum.Font.GothamBold
        TabButton.Text = name
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.TextSize = 12
        TabButton.BorderSizePixel = 0
        TabButton.Parent = TabSection
        
        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 6)
        TabCorner.Parent = TabButton
        
        -- Tab Content
        local TabContent = Instance.new("ScrollingFrame")
        TabContent.Name = name .. "Content"
        TabContent.BackgroundTransparency = 1
        TabContent.Size = UDim2.new(1, 0, 1, 0)
        TabContent.ScrollBarThickness = 3
        TabContent.ScrollBarImageColor3 = Color3.fromRGB(255, 255, 255)
        TabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        TabContent.Visible = false
        TabContent.BorderSizePixel = 0
        TabContent.Parent = ContentArea
        
        local ListLayout = Instance.new("UIListLayout")
        ListLayout.Padding = UDim.new(0, 4)
        ListLayout.SortOrder = Enum.SortOrder.LayoutOrder
        ListLayout.Parent = TabContent
        
        local Padding = Instance.new("UIPadding")
        Padding.PaddingLeft = UDim.new(0, 4)
        Padding.PaddingRight = UDim.new(0, 4)
        Padding.PaddingTop = UDim.new(0, 4)
        Padding.Parent = TabContent
        
        ListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabContent.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 8)
        end)
        
        Tab.Button = TabButton
        Tab.Content = TabContent
        
        TabButton.MouseButton1Click:Connect(function()
            Window:SelectTab(Tab)
        end)
        
        -- Tab Functions
        function Tab:AddButton(config)
            config = config or {}
            config.Name = config.Name or "Button"
            config.Callback = config.Callback or function() end
            
            local ButtonFrame = Instance.new("Frame")
            ButtonFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
            ButtonFrame.Size = UDim2.new(1, -8, 0, 28)
            ButtonFrame.BorderSizePixel = 0
            ButtonFrame.Parent = TabContent
            
            local ButtonCorner = Instance.new("UICorner")
            ButtonCorner.CornerRadius = UDim.new(0, 5)
            ButtonCorner.Parent = ButtonFrame
            
            local ButtonName = Instance.new("TextLabel")
            ButtonName.BackgroundTransparency = 1
            ButtonName.Position = UDim2.new(0, 8, 0, 0)
            ButtonName.Size = UDim2.new(0.6, 0, 1, 0)
            ButtonName.Font = Enum.Font.GothamBold
            ButtonName.Text = config.Name
            ButtonName.TextColor3 = Color3.fromRGB(255, 255, 255)
            ButtonName.TextSize = 12
            ButtonName.TextXAlignment = Enum.TextXAlignment.Left
            ButtonName.Parent = ButtonFrame
            
            local ClickArea = Instance.new("TextButton")
            ClickArea.BackgroundTransparency = 1
            ClickArea.Size = UDim2.new(1, 0, 1, 0)
            ClickArea.Text = ""
            ClickArea.BorderSizePixel = 0
            ClickArea.Parent = ButtonFrame
            
            ClickArea.MouseButton1Click:Connect(function()
                Tween(ButtonFrame, {BackgroundColor3 = Color3.fromRGB(40, 40, 40)}, 0.1)
                task.wait(0.1)
                Tween(ButtonFrame, {BackgroundColor3 = Color3.fromRGB(20, 20, 20)}, 0.1)
                config.Callback()
            end)
            
            return ButtonFrame
        end
        
        function Tab:AddToggle(config)
            config = config or {}
            config.Name = config.Name or "Toggle"
            config.Default = config.Default or false
            config.Callback = config.Callback or function() end
            
            local ToggleFrame = Instance.new("Frame")
            ToggleFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
            ToggleFrame.Size = UDim2.new(1, -8, 0, 28)
            ToggleFrame.BorderSizePixel = 0
            ToggleFrame.Parent = TabContent
            
            local ToggleCorner = Instance.new("UICorner")
            ToggleCorner.CornerRadius = UDim.new(0, 5)
            ToggleCorner.Parent = ToggleFrame
            
            local ToggleName = Instance.new("TextLabel")
            ToggleName.BackgroundTransparency = 1
            ToggleName.Position = UDim2.new(0, 8, 0, 0)
            ToggleName.Size = UDim2.new(0.7, 0, 1, 0)
            ToggleName.Font = Enum.Font.GothamBold
            ToggleName.Text = config.Name
            ToggleName.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleName.TextSize = 12
            ToggleName.TextXAlignment = Enum.TextXAlignment.Left
            ToggleName.Parent = ToggleFrame
            
            local ToggleButton = Instance.new("TextButton")
            ToggleButton.BackgroundColor3 = config.Default and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(40, 40, 40)
            ToggleButton.Position = UDim2.new(0.88, 0, 0.2, 0)
            ToggleButton.Size = UDim2.new(0, 20, 0, 18)
            ToggleButton.Text = ""
            ToggleButton.BorderSizePixel = 0
            ToggleButton.Parent = ToggleFrame
            
            local ToggleCorner2 = Instance.new("UICorner")
            ToggleCorner2.CornerRadius = UDim.new(0, 4)
            ToggleCorner2.Parent = ToggleButton
            
            local toggled = config.Default
            
            ToggleButton.MouseButton1Click:Connect(function()
                toggled = not toggled
                Tween(ToggleButton, {
                    BackgroundColor3 = toggled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(40, 40, 40)
                }, 0.2)
                config.Callback(toggled)
            end)
            
            return ToggleFrame
        end
        
        function Tab:AddDivider()
            local Divider = Instance.new("Frame")
            Divider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            Divider.Size = UDim2.new(1, -8, 0, 1)
            Divider.BorderSizePixel = 0
            Divider.Parent = TabContent
            
            return Divider
        end
        
        function Tab:AddSection(name)
            local Section = Instance.new("Frame")
            Section.BackgroundTransparency = 1
            Section.Size = UDim2.new(1, -8, 0, 25)
            Section.Parent = TabContent
            
            local SectionName = Instance.new("TextLabel")
            SectionName.BackgroundTransparency = 1
            SectionName.Position = UDim2.new(0, 8, 0, 0)
            SectionName.Size = UDim2.new(1, -16, 1, 0)
            SectionName.Font = Enum.Font.GothamBold
            SectionName.Text = name or "Section"
            SectionName.TextColor3 = Color3.fromRGB(255, 255, 255)
            SectionName.TextSize = 13
            SectionName.TextXAlignment = Enum.TextXAlignment.Left
            SectionName.Parent = Section
            
            return Section
        end
        
        table.insert(Window.Tabs, Tab)
        return Tab
    end
    
    function Window:SelectTab(tab)
        for _, t in pairs(Window.Tabs) do
            t.Content.Visible = false
            Tween(t.Button, {BackgroundColor3 = Color3.fromRGB(25, 25, 25)}, 0.2)
        end
        
        tab.Content.Visible = true
        Tween(tab.Button, {BackgroundColor3 = Color3.fromRGB(45, 45, 45)}, 0.2)
        Window.CurrentTab = tab
    end
    
    -- Opening Animation
    MainBg.Size = UDim2.new(0, 0, 0, 0)
    Tween(MainBg, {Size = responsiveSize}, 0.5, Enum.EasingStyle.Back)
    
    return Window
end

return FryzerUI
