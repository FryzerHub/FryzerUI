print("üöÄ Fryzer UI Library Loading...")

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

print("‚úÖ Services loaded successfully")

local FryzerUI = {}
FryzerUI.__index = FryzerUI

-- Utility Functions
local function Tween(instance, properties, duration, style, direction)
    local tweenInfo = TweenInfo.new(
        duration or 0.3,
        style or Enum.EasingStyle.Quad,
        direction or Enum.EasingDirection.Out
    )
    local tween = TweenService:Create(instance, tweenInfo, properties)
    tween:Play()
    return tween
end

local function MakeDraggable(frame, dragFrame)
    local dragging, dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale, 
            startPos.X.Offset + delta.X, 
            startPos.Y.Scale, 
            startPos.Y.Offset + delta.Y
        )
    end
    
    dragFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    dragFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
    
    print("‚úÖ Made draggable:", dragFrame.Name)
end

-- Main Library Function
function FryzerUI:CreateWindow(config)
    print("üì¶ Creating Window...")
    
    local Window = {}
    Window.Tabs = {}
    Window.CurrentTab = nil
    
    -- Validate config
    config = config or {}
    config.Title = config.Title or "Fryzer Hub"
    config.Version = config.Version or "v1.0"
    config.Size = config.Size or UDim2.new(0, 500, 0, 350)
    
    print("‚öôÔ∏è Config:", config.Title, config.Version)
    
    -- Wait for PlayerGui
    local success, playerGui = pcall(function()
        return LocalPlayer:WaitForChild("PlayerGui", 10)
    end)
    
    if not success or not playerGui then
        warn("‚ùå Failed to get PlayerGui!")
        return nil
    end
    
    print("‚úÖ PlayerGui found")
    
    -- Create ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "FryzerGui"
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.DisplayOrder = 999
    
    -- Try to parent to CoreGui first (for better compatibility)
    local parentSuccess = pcall(function()
        ScreenGui.Parent = game:GetService("CoreGui")
        print("‚úÖ Parented to CoreGui")
    end)
    
    if not parentSuccess then
        ScreenGui.Parent = playerGui
        print("‚úÖ Parented to PlayerGui")
    end
    
    -- Main Background
    local MainBg = Instance.new("Frame")
    MainBg.Name = "MainBg"
    MainBg.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MainBg.AnchorPoint = Vector2.new(0.5, 0.5)
    MainBg.Position = UDim2.new(0.5, 0, 0.5, 0)
    MainBg.Size = config.Size
    MainBg.ClipsDescendants = true
    MainBg.BorderSizePixel = 0
    MainBg.Active = true
    MainBg.Parent = ScreenGui
    
    print("‚úÖ Main background created")
    
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 16)
    MainCorner.Parent = MainBg
    
    -- Top Bar
    local TopBar = Instance.new("Frame")
    TopBar.Name = "TopBar"
    TopBar.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TopBar.Size = UDim2.new(1, 0, 0, 45)
    TopBar.BorderSizePixel = 0
    TopBar.Parent = MainBg
    
    local TopBarCorner = Instance.new("UICorner")
    TopBarCorner.CornerRadius = UDim.new(0.2, 8)
    TopBarCorner.Parent = TopBar
    
    local TopBarExtend = Instance.new("Frame")
    TopBarExtend.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TopBarExtend.Position = UDim2.new(0, 0, 0.8, 0)
    TopBarExtend.Size = UDim2.new(1, 0, 0, 11)
    TopBarExtend.BorderSizePixel = 0
    TopBarExtend.Parent = TopBar
    
    print("‚úÖ Top bar created")
    
    -- Title
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.BackgroundTransparency = 1
    Title.Position = UDim2.new(0.02, 0, 0, 0)
    Title.Size = UDim2.new(0, 150, 0, 45)
    Title.Font = Enum.Font.GothamBold
    Title.Text = config.Title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 14
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = TopBar
    
    -- Version Tag
    local VersionTag = Instance.new("Frame")
    VersionTag.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    VersionTag.Position = UDim2.new(0.58, 0, 0.18, 0)
    VersionTag.Size = UDim2.new(0, 70, 0, 28)
    VersionTag.BorderSizePixel = 0
    VersionTag.Parent = TopBar
    
    local VersionCorner = Instance.new("UICorner")
    VersionCorner.CornerRadius = UDim.new(0, 14)
    VersionCorner.Parent = VersionTag
    
    local VersionText = Instance.new("TextLabel")
    VersionText.BackgroundTransparency = 1
    VersionText.Size = UDim2.new(1, 0, 1, 0)
    VersionText.Font = Enum.Font.GothamBold
    VersionText.Text = config.Version
    VersionText.TextColor3 = Color3.fromRGB(255, 255, 255)
    VersionText.TextSize = 12
    VersionText.Parent = VersionTag
    
    -- Close Button
    local CloseButton = Instance.new("TextButton")
    CloseButton.BackgroundTransparency = 1
    CloseButton.Position = UDim2.new(0.92, 0, 0.15, 0)
    CloseButton.Size = UDim2.new(0, 35, 0, 30)
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.Text = "X"
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 16
    CloseButton.BorderSizePixel = 0
    CloseButton.Parent = TopBar
    
    CloseButton.MouseButton1Click:Connect(function()
        print("üî¥ Close button clicked")
        Tween(MainBg, {Size = UDim2.new(0, 0, 0, 0)}, 0.3)
        wait(0.3)
        ScreenGui:Destroy()
        print("‚úÖ GUI Destroyed")
    end)
    
    -- Minimize Button
    local MinimizeButton = Instance.new("TextButton")
    MinimizeButton.BackgroundTransparency = 1
    MinimizeButton.Position = UDim2.new(0.84, 0, 0.15, 0)
    MinimizeButton.Size = UDim2.new(0, 35, 0, 30)
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.Text = "-"
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.TextSize = 18
    MinimizeButton.BorderSizePixel = 0
    MinimizeButton.Parent = TopBar
    
    local isMinimized = false
    MinimizeButton.MouseButton1Click:Connect(function()
        isMinimized = not isMinimized
        print("üì¶ Minimize toggled:", isMinimized)
        if isMinimized then
            Tween(MainBg, {Size = UDim2.new(0, 500, 0, 45)}, 0.3)
            MinimizeButton.Text = "+"
        else
            Tween(MainBg, {Size = config.Size}, 0.3)
            MinimizeButton.Text = "-"
        end
    end)
    
    -- Top Bar Divider
    local TopDivider = Instance.new("Frame")
    TopDivider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    TopDivider.Position = UDim2.new(0, 0, 0.128, 0)
    TopDivider.Size = UDim2.new(1, 0, 0, 1)
    TopDivider.BorderSizePixel = 0
    TopDivider.Parent = MainBg
    
    -- Tab Section Background (Now Scrollable)
    local TabSection = Instance.new("ScrollingFrame")
    TabSection.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
    TabSection.Position = UDim2.new(0, 0, 0.128, 0)
    TabSection.Size = UDim2.new(0, 100, 0, 255)
    TabSection.BorderSizePixel = 0
    TabSection.ScrollBarThickness = 3
    TabSection.ScrollBarImageColor3 = Color3.fromRGB(255, 255, 255)
    TabSection.CanvasSize = UDim2.new(0, 0, 0, 0)
    TabSection.Parent = MainBg
    
    local TabListLayout = Instance.new("UIListLayout")
    TabListLayout.Padding = UDim.new(0, 3)
    TabListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    TabListLayout.Parent = TabSection
    
    TabListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        TabSection.CanvasSize = UDim2.new(0, 0, 0, TabListLayout.AbsoluteContentSize.Y + 5)
    end)
    
    -- Tab Divider
    local TabDivider = Instance.new("Frame")
    TabDivider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    TabDivider.Position = UDim2.new(0.2, 0, 0.128, 0)
    TabDivider.Size = UDim2.new(0, 2, 0, 255)
    TabDivider.BorderSizePixel = 0
    TabDivider.Parent = MainBg
    
    -- Main Content Area
    local ContentArea = Instance.new("Frame")
    ContentArea.Name = "ContentArea"
    ContentArea.BackgroundColor3 = Color3.fromRGB(39, 39, 39)
    ContentArea.Position = UDim2.new(0.22, 0, 0.145, 0)
    ContentArea.Size = UDim2.new(0, 380, 0, 245)
    ContentArea.ClipsDescendants = true
    ContentArea.BorderSizePixel = 0
    ContentArea.Parent = MainBg
    
    local ContentCorner = Instance.new("UICorner")
    ContentCorner.CornerRadius = UDim.new(0, 12)
    ContentCorner.Parent = ContentArea
    
    print("‚úÖ Content area created")
    
    -- Bottom Bar
    local BottomBar = Instance.new("Frame")
    BottomBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    BottomBar.Position = UDim2.new(0, 0, 0.86, 0)
    BottomBar.Size = UDim2.new(1, 0, 0, 49)
    BottomBar.BorderSizePixel = 0
    BottomBar.Parent = MainBg
    
    local BottomCorner = Instance.new("UICorner")
    BottomCorner.CornerRadius = UDim.new(0, 12)
    BottomCorner.Parent = BottomBar
    
    -- Bottom Divider
    local BottomDivider = Instance.new("Frame")
    BottomDivider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    BottomDivider.Position = UDim2.new(0, 0, 0.86, 0)
    BottomDivider.Size = UDim2.new(1, 0, 0, 1)
    BottomDivider.BorderSizePixel = 0
    BottomDivider.Parent = MainBg
    
    -- User Profile Image
    local UserProfile = Instance.new("ImageLabel")
    UserProfile.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    UserProfile.BackgroundTransparency = 0
    UserProfile.Position = UDim2.new(0.02, 0, 0.15, 0)
    UserProfile.Size = UDim2.new(0, 35, 0, 35)
    UserProfile.BorderSizePixel = 0
    UserProfile.Image = "https://www.roblox.com/headshot-thumbnail/image?userId=" .. LocalPlayer.UserId .. "&width=150&height=150&format=png"
    UserProfile.Parent = BottomBar
    
    local ProfileCorner = Instance.new("UICorner")
    ProfileCorner.CornerRadius = UDim.new(1, 0)
    ProfileCorner.Parent = UserProfile
    
    -- Username
    local Username = Instance.new("TextLabel")
    Username.BackgroundTransparency = 1
    Username.Position = UDim2.new(0.11, 0, 0.15, 0)
    Username.Size = UDim2.new(0, 90, 0, 35)
    Username.Font = Enum.Font.GothamBold
    Username.Text = "@" .. LocalPlayer.Name
    Username.TextColor3 = Color3.fromRGB(255, 255, 255)
    Username.TextSize = 11
    Username.TextScaled = true
    Username.Parent = BottomBar
    
    -- FPS Counter
    local FpsLabel = Instance.new("TextLabel")
    FpsLabel.BackgroundTransparency = 1
    FpsLabel.Position = UDim2.new(0.62, 0, 0.1, 0)
    FpsLabel.Size = UDim2.new(0, 80, 0, 40)
    FpsLabel.Font = Enum.Font.GothamBold
    FpsLabel.Text = "FPS: 60"
    FpsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    FpsLabel.TextSize = 12
    FpsLabel.Parent = BottomBar
    
    -- Time Label
    local TimeLabel = Instance.new("TextLabel")
    TimeLabel.BackgroundTransparency = 1
    TimeLabel.Position = UDim2.new(0.38, 0, 0.1, 0)
    TimeLabel.Size = UDim2.new(0, 100, 0, 40)
    TimeLabel.Font = Enum.Font.GothamBold
    TimeLabel.Text = "Time: 00:00"
    TimeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TimeLabel.TextSize = 12
    TimeLabel.Parent = BottomBar
    
    print("‚úÖ Bottom bar created")
    
    -- Update FPS and Time
    local lastUpdate = tick()
    local fps = 60
    
    RunService.RenderStepped:Connect(function()
        local now = tick()
        fps = math.floor(1 / (now - lastUpdate))
        lastUpdate = now
        
        FpsLabel.Text = "FPS: " .. fps
        TimeLabel.Text = "Time: " .. os.date("%H:%M:%S")
    end)
    
    -- Make Draggable
    MakeDraggable(MainBg, TopBar)
    
    -- Window Functions
    function Window:AddTab(name)
        print("üìë Adding tab:", name)
        
        local Tab = {}
        Tab.Name = name
        Tab.Elements = {}
        Tab.Button = nil
        Tab.Content = nil
        
        -- Create Tab Button
        local TabButton = Instance.new("TextButton")
        TabButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        TabButton.Position = UDim2.new(0, 0, 0, 0)
        TabButton.Size = UDim2.new(1, -5, 0, 32)
        TabButton.Font = Enum.Font.GothamBold
        TabButton.Text = name
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.TextSize = 11
        TabButton.BorderSizePixel = 0
        TabButton.Parent = TabSection
        
        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 8)
        TabCorner.Parent = TabButton
        
        -- Create Tab Content
        local TabContent = Instance.new("ScrollingFrame")
        TabContent.Name = name .. "Content"
        TabContent.BackgroundTransparency = 1
        TabContent.Size = UDim2.new(1, 0, 1, 0)
        TabContent.ScrollBarThickness = 4
        TabContent.ScrollBarImageColor3 = Color3.fromRGB(255, 255, 255)
        TabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        TabContent.Visible = false
        TabContent.BorderSizePixel = 0
        TabContent.Parent = ContentArea
        
        local ListLayout = Instance.new("UIListLayout")
        ListLayout.Padding = UDim.new(0, 5)
        ListLayout.SortOrder = Enum.SortOrder.LayoutOrder
        ListLayout.Parent = TabContent
        
        local Padding = Instance.new("UIPadding")
        Padding.PaddingLeft = UDim.new(0, 5)
        Padding.PaddingRight = UDim.new(0, 5)
        Padding.PaddingTop = UDim.new(0, 5)
        Padding.Parent = TabContent
        
        ListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabContent.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 10)
        end)
        
        Tab.Button = TabButton
        Tab.Content = TabContent
        
        -- Tab Click
        TabButton.MouseButton1Click:Connect(function()
            print("üñ±Ô∏è Tab clicked:", name)
            Window:SelectTab(Tab)
        end)
        
        -- Tab Functions
        function Tab:AddButton(config)
            config = config or {}
            config.Name = config.Name or "Button"
            config.Callback = config.Callback or function() end
            
            print("üîò Adding button:", config.Name)
            
            local ButtonFrame = Instance.new("Frame")
            ButtonFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
            ButtonFrame.Size = UDim2.new(1, -10, 0, 33)
            ButtonFrame.BorderSizePixel = 0
            ButtonFrame.Parent = TabContent
            
            local ButtonCorner = Instance.new("UICorner")
            ButtonCorner.CornerRadius = UDim.new(0, 8)
            ButtonCorner.Parent = ButtonFrame
            
            local ButtonName = Instance.new("TextLabel")
            ButtonName.BackgroundTransparency = 1
            ButtonName.Position = UDim2.new(0, 10, 0, 0)
            ButtonName.Size = UDim2.new(0, 154, 1, 0)
            ButtonName.Font = Enum.Font.GothamBold
            ButtonName.Text = config.Name
            ButtonName.TextColor3 = Color3.fromRGB(255, 255, 255)
            ButtonName.TextSize = 14
            ButtonName.TextXAlignment = Enum.TextXAlignment.Left
            ButtonName.Parent = ButtonFrame
            
            local ClickArea = Instance.new("TextButton")
            ClickArea.BackgroundTransparency = 1
            ClickArea.Position = UDim2.new(0.254, 0, 0, 0)
            ClickArea.Size = UDim2.new(0.746, 0, 1, 0)
            ClickArea.Text = ""
            ClickArea.BorderSizePixel = 0
            ClickArea.Parent = ButtonFrame
            
            ClickArea.MouseButton1Click:Connect(function()
                print("‚úÖ Button clicked:", config.Name)
                Tween(ButtonFrame, {BackgroundColor3 = Color3.fromRGB(50, 50, 50)}, 0.1)
                wait(0.1)
                Tween(ButtonFrame, {BackgroundColor3 = Color3.fromRGB(18, 18, 18)}, 0.1)
                config.Callback()
            end)
            
            return ButtonFrame
        end
        
        function Tab:AddToggle(config)
            config = config or {}
            config.Name = config.Name or "Toggle"
            config.Default = config.Default or false
            config.Callback = config.Callback or function() end
            
            print("üîÑ Adding toggle:", config.Name)
            
            local ToggleFrame = Instance.new("Frame")
            ToggleFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
            ToggleFrame.Size = UDim2.new(1, -10, 0, 33)
            ToggleFrame.BorderSizePixel = 0
            ToggleFrame.Parent = TabContent
            
            local ToggleCorner = Instance.new("UICorner")
            ToggleCorner.CornerRadius = UDim.new(0, 8)
            ToggleCorner.Parent = ToggleFrame
            
            local ToggleName = Instance.new("TextLabel")
            ToggleName.BackgroundTransparency = 1
            ToggleName.Position = UDim2.new(0, 10, 0, 0)
            ToggleName.Size = UDim2.new(0, 154, 1, 0)
            ToggleName.Font = Enum.Font.GothamBold
            ToggleName.Text = config.Name
            ToggleName.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleName.TextSize = 14
            ToggleName.TextXAlignment = Enum.TextXAlignment.Left
            ToggleName.Parent = ToggleFrame
            
            local ToggleButton = Instance.new("TextButton")
            ToggleButton.BackgroundColor3 = config.Default and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(39, 39, 39)
            ToggleButton.Position = UDim2.new(0.94, 0, 0.15, 0)
            ToggleButton.Size = UDim2.new(0, 25, 0, 22)
            ToggleButton.Text = ""
            ToggleButton.BorderSizePixel = 0
            ToggleButton.Parent = ToggleFrame
            
            local ToggleCorner2 = Instance.new("UICorner")
            ToggleCorner2.CornerRadius = UDim.new(0, 5)
            ToggleCorner2.Parent = ToggleButton
            
            local toggled = config.Default
            
            ToggleButton.MouseButton1Click:Connect(function()
                toggled = not toggled
                print("üîÑ Toggle:", config.Name, "=", toggled)
                Tween(ToggleButton, {
                    BackgroundColor3 = toggled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(39, 39, 39)
                }, 0.2)
                config.Callback(toggled)
            end)
            
            return ToggleFrame
        end
        
        function Tab:AddDivider()
            print("‚ûñ Adding divider")
            
            local Divider = Instance.new("Frame")
            Divider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Divider.Size = UDim2.new(1, -10, 0, 2)
            Divider.BorderSizePixel = 0
            Divider.Parent = TabContent
            
            return Divider
        end
        
        function Tab:AddSection(name)
            print("üìã Adding section:", name)
            
            local Section = Instance.new("Frame")
            Section.BackgroundTransparency = 1
            Section.Size = UDim2.new(1, -10, 0, 33)
            Section.Parent = TabContent
            
            local SectionName = Instance.new("TextLabel")
            SectionName.BackgroundTransparency = 1
            SectionName.Position = UDim2.new(0, 10, 0, 0)
            SectionName.Size = UDim2.new(0, 270, 1, 0)
            SectionName.Font = Enum.Font.GothamBold
            SectionName.Text = name or "Section"
            SectionName.TextColor3 = Color3.fromRGB(255, 255, 255)
            SectionName.TextSize = 16
            SectionName.TextXAlignment = Enum.TextXAlignment.Left
            SectionName.Parent = Section
            
            return Section
        end
        
        function Tab:AddSlider(config)
            config = config or {}
            config.Name = config.Name or "Slider"
            config.Min = config.Min or 0
            config.Max = config.Max or 100
            config.Default = config.Default or 50
            config.Callback = config.Callback or function() end
            
            print("üéöÔ∏è Adding slider:", config.Name)
            
            local SliderFrame = Instance.new("Frame")
            SliderFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
            SliderFrame.Size = UDim2.new(1, -10, 0, 50)
            SliderFrame.BorderSizePixel = 0
            SliderFrame.Parent = TabContent
            
            local SliderCorner = Instance.new("UICorner")
            SliderCorner.CornerRadius = UDim.new(0, 8)
            SliderCorner.Parent = SliderFrame
            
            local SliderName = Instance.new("TextLabel")
            SliderName.BackgroundTransparency = 1
            SliderName.Position = UDim2.new(0, 10, 0, 5)
            SliderName.Size = UDim2.new(1, -20, 0, 15)
            SliderName.Font = Enum.Font.GothamBold
            SliderName.Text = config.Name
            SliderName.TextColor3 = Color3.fromRGB(255, 255, 255)
            SliderName.TextSize = 13
            SliderName.TextXAlignment = Enum.TextXAlignment.Left
            SliderName.Parent = SliderFrame
            
            local ValueLabel = Instance.new("TextLabel")
            ValueLabel.BackgroundTransparency = 1
            ValueLabel.Position = UDim2.new(1, -60, 0, 5)
            ValueLabel.Size = UDim2.new(0, 50, 0, 15)
            ValueLabel.Font = Enum.Font.GothamBold
            ValueLabel.Text = tostring(config.Default)
            ValueLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
            ValueLabel.TextSize = 12
            ValueLabel.TextXAlignment = Enum.TextXAlignment.Right
            ValueLabel.Parent = SliderFrame
            
            local SliderBack = Instance.new("Frame")
            SliderBack.BackgroundColor3 = Color3.fromRGB(39, 39, 39)
            SliderBack.Position = UDim2.new(0, 10, 0, 28)
            SliderBack.Size = UDim2.new(1, -20, 0, 15)
            SliderBack.BorderSizePixel = 0
            SliderBack.Parent = SliderFrame
            
            local SliderFillCorner = Instance.new("UICorner")
        SliderFillCorner.CornerRadius = UDim.new(0, 8)
        SliderFillCorner.Parent = SliderFill
        
        local SliderButton = Instance.new("TextButton")
        SliderButton.BackgroundTransparency = 1
        SliderButton.Size = UDim2.new(1, 0, 1, 0)
        SliderButton.Text = ""
        SliderButton.Parent = SliderBack
        
        local dragging = false
        local currentValue = config.Default
        
        local function updateSlider(input)
            local pos = math.clamp((input.Position.X - SliderBack.AbsolutePosition.X) / SliderBack.AbsoluteSize.X, 0, 1)
            currentValue = math.floor(config.Min + (config.Max - config.Min) * pos)
            
            Tween(SliderFill, {Size = UDim2.new(pos, 0, 1, 0)}, 0.1)
            ValueLabel.Text = tostring(currentValue)
            config.Callback(currentValue)
        end
        
        SliderButton.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = true
                updateSlider(input)
            end
        end)
        
        SliderButton.InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = false
            end
        end)
        
        UserInputService.InputChanged:Connect(function(input)
            if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                updateSlider(input)
            end
        end)
        
        print("‚úÖ Slider added:", config.Name)
        return SliderFrame
    end
    
    table.insert(Window.Tabs, Tab)
    print("‚úÖ Tab added successfully:", name)
    return Tab
end

function Window:SelectTab(tab)
    print("üéØ Selecting tab:", tab.Name)
    
    for _, t in pairs(Window.Tabs) do
        t.Content.Visible = false
        Tween(t.Button, {BackgroundColor3 = Color3.fromRGB(30, 30, 30)}, 0.2)
    end
    
    tab.Content.Visible = true
    Tween(tab.Button, {BackgroundColor3 = Color3.fromRGB(50, 50, 50)}, 0.2)
    Window.CurrentTab = tab
    
    print("‚úÖ Tab selected:", tab.Name)
end

-- Opening Animation
MainBg.Size = UDim2.new(0, 0, 0, 0)
Tween(MainBg, {Size = config.Size}, 0.5, Enum.EasingStyle.Back)

print("üéâ Window created successfully!")
print("==========================================")

return Window
